<header>
  <!-- navigation bar -->
  <nav>
    <div class="nav-wrapper">

      <!-- menu todolist icon that is hidden on full screen-->
      <a href="#" data-activates="toDoTab" class="button-collapse"><i class="material-icons">menu</i></a>

      <!-- logo -->
      <a href="#" class="brand-logo center">Eatinerary</a>

      <ul class="right">
        <li><a class="modal-trigger" href="#searchModal"><i class="material-icons">search</i></a></li>

        <!-- option menu icon -->
        <li><a class='dropdown-button' href='#' data-activates='menuDropDown' data-beloworigin="true"><i class="material-icons">more_vert</i></a></li>
      </ul>

      <!-- options menu -->
      <ul id='menuDropDown' class='dropdown-content'>
        <li><a href="#!">one</a></li>
        <li><a href="#!">two</a></li>
        <li class="divider"></li>
        <li><a href="#!">Log out</a></li>
      </ul>
    </div>
  </nav>

  <!-- Sidetab/ todotab -->
  <div id="toDoTab" class="side-nav fixed">
    <div class="brand-logo center"><h4>To do list</h4><hr></div>
    <ul class="collapsible" data-collapsible="accordion">
      {{#each user}}
      <li>
        <div class="collapsible-header"><i class="material-icons">label</i>{{this.dataValues.title}}</div>
        <div class="collapsible-body"><p id="userComment">{{this.dataValues.description}}</p></div>
      </li>
      {{/each}}
    </ul>
  </div>

  <!-- search modal -->
  <div id="searchModal" class="modal modal-fixed-footer">
    <div class="modal-content">
      <h5>Search places by destination</h5>
      <form class="col s12">
        <div class="row">
          <div class="input-field col s12">
            <input placeholder="Enter an address, city or ZIP code" id="searchInput" type="text" class="validate">
            <label for="searchInput">Search</label>
          </div>
        </div>
      </form>
    </div>
    <div class="modal-footer">
      <a href="#!" class="modal-action modal-close waves-effect waves-green btn-flat ">Search</a>
    </div>
  </div>

  <!-- add modal -->
  <div id="addModal" class="modal modal-fixed-footer">
    <div class="modal-content">
      <h5>Add restaurant to Eatinerary</h5>
      <div class="row">
        <form class="col s12">

          <!-- Restaurant Name -->
          <div class="row">
            <div class="input-field col s12">
              <input id="restaurantNameInput" type="text" class="validate">
              <label for="restaurantNameInput">Restaurant Name</label>
            </div>
          </div>

          <!-- streetAddress -->
          <div class="row">
            <div class="input-field col s12">
              <input id="addressInput" type="text" class="validate">
              <label for="addressInput">Address</label>
            </div>
          </div>

          <!-- City and State -->
          <div class="row">
            <!-- city -->
            <div class="input-field col s6">
              <input id="cityInput" type="text" class="validate">
              <label for="cityInput">City</label>
            </div>

            <!-- state -->
            <div class="input-field col s6">
              <select>
                <option value="" disabled selected>Choose your option</option>
                <option value="1">AL</option>
                <option value="2">AK</option>
                <option value="3">AZ</option>
                <option value="4">AR</option>
                <option value="5">CA</option>
                <option value="6">CO</option>
                <option value="7">CT</option>
                <option value="8">DE</option>
                <option value="9">FL</option>
                <option value="10">GA</option>
                <option value="11">HI</option>
                <option value="12">ID</option>
                <option value="13">IL</option>
                <option value="14">IN</option>
                <option value="15">IA</option>
                <option value="16">KS</option>
                <option value="5">KY</option>
                <option value="6">LA</option>
                <option value="7">ME</option>
                <option value="8">MD</option>
                <option value="9">MA</option>
                <option value="10">MI</option>
                <option value="11">MN</option>
                <option value="12">MS</option>
                <option value="1">MO</option>
                <option value="2">MT</option>
                <option value="3">NE</option>
                <option value="4">NV</option>
                <option value="5">NH</option>
                <option value="6">NJ</option>
                <option value="7">NM</option>
                <option value="8">NY</option>
                <option value="9">NC</option>
                <option value="10">ND</option>
                <option value="11">OH</option>
                <option value="12">OK</option>
                <option value="1">OR</option>
                <option value="2">PA</option>
                <option value="3">RI</option>
                <option value="4">SC</option>
                <option value="5">SD</option>
                <option value="6">TN</option>
                <option value="7">TX</option>
                <option value="8">UT</option>
                <option value="9">VT</option>
                <option value="10">VA</option>
                <option value="11">WA</option>
                <option value="12">WV</option>
                <option value="11">WI</option>
                <option value="12">WY</option>
              </select>
              <label>State</label>
            </div>

          </div>

          <!-- Phone -->
          <div class="row">
            <div class="input-field col s12">
              <input id="phoneInput" type="text" class="validate">
              <label for="phoneInput">Restaurant Phone Number</label>
            </div>
          </div>

          <!-- website -->
          <div class="row">
            <div class="input-field col s12">
              <input id="websiteInput" type="text" class="validate">
              <label for="websiteInput">Restaurant URL</label>
            </div>
          </div>

          <div class="row">
            <div class="switch col s6">
              <!-- <label for="first_name">Would you like an email?</label> -->
              <h6>Would you like an email sent?</h6>
              <label>
                Off
                <input id="reminderInput" type="checkbox">
                <span class="lever"></span>
                On
              </label>
            </div>
            <div class="col s6">
              <h6>Set reminder date</h6>
              <input id="dateInput" type="date" class="datepicker">

            </div>

          </div>


        </form>
      </div>
    </div>
    <div class="modal-footer">
      <button class="btn waves-effect waves-light" type="submit" name="action" id = "addToDo">Submit <i class="material-icons right">send</i>
      </button>
    </div>
  </div>

</header>

<main>
  <div class="row">
    <div class="col s12 m7 l8" id="googleMaps">
    </div>
  </div>

  <div class="fixed-action-btn modal-trigger" href="#addModal">
    <a class="btn-floating btn-large green">
    <i class="large material-icons">playlist_add</i>
    </a>
  </div>
</main>
